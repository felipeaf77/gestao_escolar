<% form_for([@course, @classroom]) do |f| %>
  <p>
    <%= f.label :name, 'Nome' %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :start, 'InÃ­cio' %><br />
    <%= f.date_select :start, :order => [:day, :month, :year] %>
