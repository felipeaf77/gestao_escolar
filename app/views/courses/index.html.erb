<% title "Lista de Cursos" %> 

<table>
  <tr>
    <th>Nome</th>
    <th>Instrutor</th>
    <th>Carga Horária</th>
    <th>&nbsp;</th>
  </tr>

<% for course in @courses %>
  <tr>
    <td><%=h course.name %></td>
    <td><%=h course.instructor.name %></td>
    <td><%=h course.duration.para_dinheiro %></td>
    <td>
      <%= link_to 'Exibir', course %> |
      <%= link_to 'Alterar', edit_course_path(course) %> |
      <%= link_to 'Excluir', course, :confirm => 'Você tem certeza?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo curso', new_course_path %>
